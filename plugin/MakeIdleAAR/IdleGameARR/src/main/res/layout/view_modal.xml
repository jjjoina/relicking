<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondTitleTextView"
        android:text="사용자 권한 필요"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/secondMessageTextView"
        android:text="이 앱은 정확한 시간 측정을 위해 다른 앱 위에 표시 될 수 있는 권한이 필요해요. \n 다른앱 위에 표시 -> 우리앱 -> 허용"
        android:paddingTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintTop_toBottomOf="@id/secondTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textColor="#3F51B5"
        android:id="@+id/secondConfirmButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/secondMessageTextView"
        app:layout_constraintLeft_toRightOf="@+id/secondExitButton"
        app:layout_constraintEnd_toEndOf="@id/secondMessageTextView"
        style="@style/Widget.Material3.Button.ElevatedButton"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textColor="@color/design_default_color_error"
        android:id="@+id/secondExitButton"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/secondMessageTextView"
        app:layout_constraintEnd_toStartOf="@id/secondConfirmButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/secondConfirmButton"
        style="@style/Widget.Material3.Button.ElevatedButton"/>



</androidx.constraintlayout.widget.ConstraintLayout>